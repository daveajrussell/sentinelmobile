<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:drawable/dialog_holo_dark_frame"
              android:baselineAligned="false"
              android:gravity="center_vertical|center_horizontal|clip_horizontal|clip_vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/countdownTimer" android:layout_gravity="center_horizontal"
                android:textSize="60dp" android:textIsSelectable="false"
                android:autoText="true" android:visibility="invisible"
                android:typeface="normal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining"
                android:id="@+id/tvRemaining" android:layout_gravity="center" android:singleLine="false"
                android:textSize="16dp" android:visibility="invisible"
                />
        <Button
                android:layout_width="@dimen/login_dimen"
                android:layout_height="wrap_content"
                android:text="@string/clock_in_title"
                android:id="@+id/btnClockIn" android:layout_gravity="center" android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>